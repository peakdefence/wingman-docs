# WINGMAN Documentation Configuration
# Copy this file to .env and update the values as needed

# Site Information
SITE_NAME="WINGMAN Documentation"
SITE_DESCRIPTION="Comprehensive documentation for WINGMAN - Your Security Context Platform"
SITE_URL="https://docs.peakdefence.com"

# GitHub Repository
GITHUB_REPOSITORY="PeakDefence/wingman-docs"
GITHUB_PAGES_BRANCH="gh-pages"

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=""  # e.g., "G-XXXXXXXXXX"

# Deployment (for GitHub Actions)
SSH_HOST=""              # SSH host for deployment (e.g., "example.com")
SSH_USERNAME=""          # SSH username
SSH_PRIVATE_KEY=""       # SSH private key (set in GitHub Secrets)
DEPLOY_PATH=""           # Deployment path on the server (e.g., "/var/www/docs.peakdefence.com")

# Build Configuration
PYTHON_VERSION="3.9"     # Python version for building docs

# Search Configuration (Optional)
SEARCH_API_KEY=""        # API key for search service if using external search

# Feature Flags
ENABLE_ANALYTICS="false" # Set to "true" to enable analytics
ENABLE_COMMENTS="false"  # Set to "true" to enable comments

# External Services (if applicable)
# EXTERNAL_API_URL=""
# EXTERNAL_API_KEY=""

# Development Settings (for local development)
DEBUG="true"             # Set to "false" in production
DEV_ADDR="127.0.0.1:8000" # Default development server address

# Internationalization
LANGUAGE_CODE="en"
TIME_ZONE="UTC"

# Security
SECRET_KEY="change-this-to-a-secure-secret-key"
ALLOWED_HOSTS="*"        # In production, specify your domain

